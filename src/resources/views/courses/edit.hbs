<div class="mt-5">
    <h3>Cập nhật khóa học</h3>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT">

        <div class="mt-5 form-group">
            <label for="name">TÊN KHÓA HỌC</label>
            <input value="{{course.name}}" type="text" class="form-control" id="name" name="name">
        </div>

        <div class="form-group">
            <label for="description">MÔ TẢ</label>
            <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
        </div>

        <div class="form-group">
            <label for="videoId">VIDEO ID</label>
            <input value="{{course.videoId}}" type="text" class="form-control" id="videoId" name="videoId">
        </div>

        <div class="form-group">
            <label for="level">TRÌNH ĐỘ</label>
            <input value="{{course.level}}" type="text" class="form-control" id="level" name="level">
        </div>

        <button type="submit" class="btn btn-primary">Lưu lại</button>

    </form>
</div>